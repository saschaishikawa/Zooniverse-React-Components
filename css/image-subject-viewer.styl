.image-subject-viewer
  text-align center
  // width 100%
  
  .subject-container    
    background-color #fff
  
    .marking-surface
      width 900px
      height 90vh //700px
      text-align center
      display inline-block
      overflow-y scroll
      // background-color #000
      color red

      .marks-list
        width 840px
        // height 100%
        // position absolute
        .mark
          position absolute
          border solid 2px #000
          background-color rgba(0,0,0,0.5)
          &:hover
            background-color rgba(0,0,0,0.0)

      .subject-image
        width 840px
        bottom 96px
    


    .subject-ui
      background-color rgba(0,0,0,0.75)
      position fixed
      bottom 0px
      width 100%
      height 10vh //96px

      .action-button
        margin 10px
      
      .metadata
        position fixed
        display block
        text-align left
        h3
          margin 20px
          color #fff
          text-align left
        .field
          color blue
          font-size 14px
        .value
          color red
          font-size 12px
          font-style italic